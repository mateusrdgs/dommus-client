:host, .card-front__container__range
  display flex
  flex 1

.card-front__container__range
  -webkit-appearance none
  background-color transparent
  &::-webkit-slider-thumb
    -webkit-appearance none
    background-color #FFF
    border-radius 50%
    margin-top -2rem
    height 5rem
    width 5rem
    margin-top -2rem
    transition all .3s linear 
    &:hover
      transform scale(1.1)
      cursor pointer
  &::-moz-range-thumb
    background-color #FFF
    border 0
    border-radius 50%
    height 5rem
    width 5rem
    &:hover
      transform scale(1.1)
      cursor pointer
  &::-ms-thumb
    background-color #FFF
    border 0
    border-radius 50%
    height 5rem
    width 5rem
    &:hover
      transform scale(1.1)
      cursor pointer
  &:focus
    outline none
  &::-moz-focus-inner,
  &::-moz-focus-outer
    border 0
  &::-webkit-slider-runnable-track
    border-color transparent
    background-color #CCC
    color transparent
    cursor pointer
    height .8rem
    width 100%
  &::-moz-range-track
    border-color transparent
    background-color #CCC
    color transparent
    cursor pointer
    width 100%
  &::-ms-track
    border-color transparent
    background-color transparent
    color transparent
    cursor pointer
    width 100%