:host
  display flex
  flex 0 0 0
  overflow hidden

:host-context(.flipped-right)
  flex 1

.card__back-right__icons
  display flex
  justify-content flex-end

.card__back-right
  color #FFF
  flex 0 1 0%
  max-width 0
  opacity 0
  transition all .5s ease
  &.isOpen
    flex 2 0 100%
    max-width 100%
    opacity 1

.fa-times
  margin-left auto