:host
  display flex
  height 3rem
  left .75rem
  position absolute
  top .75rem
  width 3rem

.menu-toggle
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  overflow hidden
  width 100%
  height 100%
  &:hover
    cursor pointer

.isMenuOpen
  &:nth-child(even)
    margin .8rem 0
  & .menu-toggle__item:first-child
      transform rotateZ(136deg) translate3d(23%, -400%, 0)
  & .menu-toggle__item:nth-child(2)
      height .3rem
      transform translateX(-4rem)
  & .menu-toggle__item:last-child
      transform rotateZ(-136deg) translate3d(23%, 400%, 0)

.menu-toggle__item
  border-radius 5px
  background-color #FFF
  display flex
  height .2rem
  opacity 1
  transition all .4s ease-in-out
  width 100%