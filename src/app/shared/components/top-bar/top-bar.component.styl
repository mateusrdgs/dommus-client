.top-bar
  display flex
  align-items center
  background-color #0A0A0A
  box-shadow 0 1px 1rem #0A0A0A
  justify-content center
  height 4.5rem
  position fixed
  width 100%
  z-index 10

.title
  font 300 1rem 'Mada', sans-serif
  align-self center
  color #FFF

@media screen and (min-width: 425px)
  .title
    font-size 1.5rem

@media screen and (min-width: 900px)
  .title
    font-size 1.8rem