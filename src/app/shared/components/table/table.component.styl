:host
  display flex
  height 100%
  padding 2rem
  width 100%

.table
  display flex
  flex-direction column
  width 100%

.table__head
  display flex
  width 100%
  padding-bottom .1rem

.table__head__item
  background-color #353C3E
  color #EEE
  flex 1
  font 600 .9rem 'Exo 2', sans-serif
  padding 1rem
  justify-content center

.table__head__item:first-child,
.table__body__row__item:first-child,
.table__head__item:last-child,
.table__body__row__item:last-child
  display none

.table__body
  display flex
  flex-direction column

.table__body__row
  display flex

.table__body__row:nth-child(odd)
  background-color #FFF

.table__body__row__item
  display flex
  flex 1
  font 600 .9rem 'Mada', sans-serif
  justify-content center
  padding 1rem
  word-break break-all

@media screen and (min-width 26rem)
  .table__head__item,
  .table__body__row__item
    font-size 1rem

@media screen and (min-width 48rem)
  .table__head__item:first-child,
  .table__body__row__item:first-child,
  .table__head__item:last-child,
  .table__body__row__item:last-child
    display flex