_box-shadow = 0 .3rem 2rem #FFF
_box-shadow--hover = 0 .3rem 2rem #999

:host
  display flex
  justify-content center
  width 100%

.users-list
  display flex
  flex-wrap wrap
  list-style none
  justify-content center
  flex-wrap wrap
  margin 0
  padding 0
  width 100%

.users-list__item
  background-color #353C3E
  box-shadow _box-shadow
  height 12.5rem
  transition all .3s linear
  width 12.5rem
  &:hover
    background-color #0A0A0A
    box-shadow _box-shadow--hover

.users-list__item-link
  align-items center
  color #EEE
  display flex
  font 300 2rem 'Exo 2', sans-serif
  height 100%
  justify-content center
  padding 0 1rem
  text-align center
  text-decoration none
  width 100%

.users-list__item
  margin-bottom 1rem

@media screen and (min-width 27rem)
  :host
    max-height 27rem

  .users-list
    max-width 26rem
    justify-content space-between

@media screen and (min-width 56.25rem)
  .users-list
    max-width 53rem