_box-shadow = 0 .8rem 1.5rem #CCC
_box-shadow--hover = 0 .8rem 1.5rem #BBB

:host
  align-items center
  display flex
  justify-content center
  width 100%

.users-list
  align-content space-between
  display flex
  flex-wrap wrap
  justify-content space-between
  list-style none
  height 17rem
  margin 0
  padding 0
  transition all .3s linear
  width 17rem

.users-list__item
  background-color #353C3E
  box-shadow _box-shadow
  height 8rem
  opacity .8
  transition all .3s linear
  width 8rem
  &:hover
    opacity 1

.users-list__item-link
  align-items center
  color #EEE
  display flex
  font 300 1.5rem 'Exo 2', sans-serif
  height 100%
  justify-content center
  padding 0 1rem
  text-align center
  text-decoration none
  transition all .3s linear
  width 100%

@media screen and (min-width 32rem)
  .users-list
    height 21rem
    width 21rem

  .users-list__item
    height 10rem
    width 10rem

@media screen and (min-width 56.25rem)
  .users-list
    height 10rem
    width 45rem