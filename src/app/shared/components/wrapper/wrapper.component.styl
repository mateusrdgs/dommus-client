.wrapper
  display flex
  padding-top 5rem
  width 100%
  height 100%

.sidebar__container
  flex 0 0 20rem
  margin-left -20rem
  transition all .3s ease-in-out

.isSidebarOpen
  margin-left 0

.router-outlet__container
  flex 1
  overflow-y scroll
  padding 1rem
  position relative
  max-width 100%

.router-outlet__container::-webkit-scrollbar
  display none

@media screen and (min-width: 48rem)
  .sidebar__container
    margin-left 0