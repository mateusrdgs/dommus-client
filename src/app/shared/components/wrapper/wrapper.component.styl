.wrapper
  display flex
  position relative
  height 100%
  width 100%
  overflow hidden

.sidebar__container
  background-color #3F3F3F
  flex 0 0 20rem
  margin 5rem 0 0 -20rem
  transition all .5s ease-in-out
  width 20rem

.isSidebarOpen
  margin-left 0

.router-outlet__container
  flex 1
  margin-top 4rem
  max-width 100%
  overflow-x hidden
  padding 1rem
  position relative
  transition all .5s ease-in-out

.isSidebarOpen + .router-outlet__container
  opacity .5

@media screen and (min-width 48rem)
  .isSidebarOpen + .router-outlet__container
    opacity 1