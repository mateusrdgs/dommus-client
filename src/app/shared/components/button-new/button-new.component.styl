:host,
.button-back
  display flex
  width 100%
  height 4rem

.button-back
  align-items center
  background-color #25A278
  box-shadow 0 0 .5rem #999
  color #EEE
  justify-content center
  margin 1rem 0
  text-decoration none
  transition all .5s linear
  &:hover
    background-color #27AE60
    box-shadow 0 .2rem 1.5rem #999
    cursor pointer