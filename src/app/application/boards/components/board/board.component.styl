:host
  display flex
  flex-direction column
  padding 2rem
  width 100%

.button-container
  display flex
  justify-content space-between
  margin-bottom 2rem
  min-height 3.47rem
  width 100%

.boards-container__warning
  text-align center

.board-content__container
  display flex

.board-content__list,
.board-content__list__item__list
  list-style none
  margin 0 2rem 0 0
  padding 0

.board-content__list
  display flex

.board-content__label
  font-family 'Exo 2', sans-serif

.box
  border .1rem solid #444B54
  border-radius .5rem
  text-align center

@media screen and (min-width: 425px)
  .board-content__pins-container
    display flex