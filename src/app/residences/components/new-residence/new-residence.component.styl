.new-residence-container
  margin auto
  overflow auto
  width 100%

.new-residence-container__title
  margin 1rem 0

.new-residence-form
  display flex
  flex-direction column
  font-size 1rem

.new-residence-form__input,
.new-residence-form__fieldset
  margin .5rem 0 1rem 0

.new-residence-form__input
  font-size 1.5rem

.new-residence-form__legend
  padding 0 .3rem

.new-residence-form__radio
  margin 0 1rem 0 0

.new-residence-form__submit
  padding 1rem 0
  margin .5rem 0 1rem 0