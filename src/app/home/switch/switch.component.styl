.switch
  display flex
  background-color #EB6B56
  color #FFF
  font 700 3rem 'Exo 2', sans-serif
  flex 1 1 100%
  height 25rem
  margin 0 0 1rem 0
  transition all .3s linear
  width 18rem
  &:hover
    cursor pointer
  &.isOn
    background-color #21AD7A

.switch__flipper
  height 100%
  width 100%

@media screen and (min-width: 26rem)
  .interactor
    height 25rem;
    width 25rem;

@media screen and (min-width: 40rem)
  .interactor
    width 18rem

.switch__front
  display flex
  flex-direction column
  height 100%
  padding 1rem
  width 100%
  &:hover
    cursor pointer
  &.isOn
    background-color #21AD7A

.switch__front-icons
  display flex
  justify-content space-between
  font-size 2rem

.switch__front-description
  display flex
  flex-direction column
  flex-grow 1
  justify-content space-around
  text-align center