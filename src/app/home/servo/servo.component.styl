.servo
  flex 1 1 100%
  height 25rem
  margin 2rem 0 2rem 0
  perspective 62.5rem
  transition _global-transition
  user-select none
  width 18rem
  &.flipped-right .servo__flipper
    transform rotateY(180deg)
  &.flipped-left .servo__flipper
    transform rotateY(-180deg)

.servo__flipper,
.servo__front,
.servo__back
  height 100%
  width 100%

.servo__flipper
  position relative
  transition _global-transition
  transform-style preserve-3d

.servo__front,
.servo__back
  backface-visibility hidden
  background-color _blue-tone
  box-shadow _box-shadow
  color #FFF
  display flex
  flex-direction column
  left 0
  padding 1rem
  position absolute
  transition _global-transition
  top 0

.servo__front
  transform rotateY(0deg)
  z-index 2
  &:hover
    background-color _blue-tone--hover
    box-shadow _box-shadow--hover
    cursor pointer
  &.isOn
    background-color _green-tone
    &:hover
      background-color _green-tone--hover
  &.isOn + .servo__back
    background-color _green-tone

.servo__front-icons,
.servo__back-left__icons,
.servo__back-right__icons,
  display flex
  justify-content space-between
  font-size 2.5rem

.fa-cogs
  font-size 4rem

.fa-tasks,
.fa-cog,
.fa-times
  transition _global-transition
  backface-visibility hidden

.fa-tasks
  transform translateX(3px)
  &:hover
    transform translateX(0)

.fa-cog,
.fa-times
  &:hover
    cursor pointer
    transform rotate(90deg)

.servo__front-description
  display flex
  flex-direction column
  flex 2 1 80%
  font 700 2.5rem 'Exo 2', sans-serif
  justify-content space-around
  text-align center

.servo__range
  display flex
  -webkit-appearance none
