.thermometer
  display flex
  background-color #F1C40F
  color #FFF
  font 700 3rem 'Exo 2', sans-serif
  flex 1 1 100%
  height 25rem
  margin 0 0 1rem 0
  transition all .3s linear
  width 18rem
  &:hover
    cursor pointer
  &.isOn
    background-color #21AD7A

.thermometer__description-container
  display flex
  flex-direction column
  flex-grow 1
  justify-content space-around
  text-align center