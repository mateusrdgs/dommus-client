_purple-tone = #867198
_purple-tone--hover = #67537A
_box-shadow = 0 .9rem 3rem #BBB
_box-shadow--hover = 0 .9rem 3rem #999

.light
  display flex
  background-color _purple-tone
  box-shadow _box-shadow
  color #FFF
  font 700 4rem 'Exo 2', sans-serif
  flex 1 1 100%
  flex-direction column
  height 25rem
  margin 2rem 0 2rem 0
  padding 1rem
  transition all .3s linear
  width 18rem
  &:hover
    background-color _purple-tone--hover
    box-shadow _box-shadow--hover
    cursor pointer

.light__description-container
  display flex
  flex-direction column
  justify-content space-around
  text-align center
  word-break break-all

.light__description
  font-size 2rem

.light__data-container
  display flex
  flex-direction column
  flex-grow 2
  justify-content space-around
  text-align center
  word-break break-all

@media screen and (min-width: 26rem)
  .light
    height 25rem;
    width 25rem;