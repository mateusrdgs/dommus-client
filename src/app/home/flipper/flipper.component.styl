.interactor
  display flex
  background-color #EB6B56
  color #FFF
  font 700 3rem 'Exo 2', sans-serif
  flex 1 1 100%
  height 25rem
  margin 0 0 1rem 0
  transition all .3s linear
  width 18rem
  &:hover
    cursor pointer
  &.isOn
    background-color #21AD7A

.flipper
  height 100%
  width 100%

@media screen and (min-width: 26rem)
  .interactor
    height 25rem;
    width 25rem;

@media screen and (min-width: 40rem)
  .interactor
    width 18rem